{
  "name": "angular-i18n",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Internationalization package for Angular",
  "main": "./dist",
  "module": "./dist",
  "typings": "./dist",
  "scripts": {
		"build": "rimraf dist && tsc -p tsconfig-dist.json",
    "htmlhint": "htmlhint ./src/**/*.html -c ./.htmlhintrc",
    "lint": "npm run tslint && npm run htmlhint",
    "prerelease": "npm run lint && npm run build && npm run test",
    "start": "webpack-dev-server --inline --progress --port 8080",
    "test": "karma start",
    "tslint": "tslint ./src/**/*.ts -t verbose"
  },
  "author": "Charles Louw <charles.louw@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/cubitworx/angular-i18n.git"
  },
  "dependencies": {
    "@angular/common": "^4.0.2",
    "@angular/compiler": "^4.0.2",
    "@angular/core": "^4.0.2",
    "@angular/platform-browser": "^4.0.2",
    "@angular/platform-browser-dynamic": "^4.0.2",
    "core-js": "^2.4.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "rxjs": "^5.0.2",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.36",
    "@types/lodash": "^4.14.62",
    "@types/node": "^7.0.12",
    "@types/webpack": "^2.2.8",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.8",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.16.1",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "node-sass": "^4.5.2",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^3.0.0"
  }
}
